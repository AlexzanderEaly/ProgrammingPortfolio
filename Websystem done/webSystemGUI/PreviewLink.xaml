<Window x:Class="webSystemGUI.PreviewLink"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:webSystemGUI"
        mc:Ignorable="d"
        Title="PreviewLink" Height="450" Width="800">
    <Grid>
        <Button x:Name="closeBtn" Content="Close" Click="closeBtn_Click" Margin="0,0,330,23" HorizontalAlignment="Right" Width="64" Height="38" VerticalAlignment="Bottom" FontSize="16"/>
        <ScrollViewer x:Name="previewLinkScrollBox" HorizontalScrollBarVisibility="Disabled" Margin="48,45,48,94"/>
        <Button x:Name="copyTextBtn" Content="Copy " Margin="0,0,414,23" VerticalAlignment="Bottom" Height="38" FontSize="16" HorizontalAlignment="Right" Width="64" Click="copyTextBtn_Click"/>

    </Grid>
</Window>
