<UserControl x:Class="webSystemGUI.RemoveLink"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:webSystemGUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBox x:Name="linkTxt" Text="" TextWrapping="Wrap" VerticalAlignment="Top" MaxLength="255" Margin="180,76,162,0" Height="22"/>
        <Label x:Name="linkLable" Content="URL:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="133,71,0,0" FontSize="16"/>
        <Button x:Name="findLinkBtn" Content="..." RenderTransformOrigin="0.223,-0.859" Height="22" Click="findLinkBtn_Click" Width="22" VerticalAlignment="Top" Margin="0,76,136,0" HorizontalAlignment="Right"/>
        <Button x:Name="removeLinkBtn" Content="Delete Link" HorizontalAlignment="Center" Margin="0,141,0,0" VerticalAlignment="Top" Height="42" Width="98" Click="removeLinkBtn_Click" FontSize="16"/>

    </Grid>
</UserControl>
